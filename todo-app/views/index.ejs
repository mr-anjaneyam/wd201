<!DOCTYPE html>
<html lang="en">

<head>
  <meta name="csrf-token" content="<%= csrfToken %>" />
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>TO-DO Manager</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet" href="/css/styles.css" />
  <script>
    var token = document
      .querySelector('meta[name="csrf-token"]')
      .getAttribute("content");
    function updateTodo(id) {
      const checkbox = document.querySelector(`#todo-${id}`);
      const intendedCompletedState = checkbox.checked;
  
      fetch(`/todos/${id}`, {
        method: "put",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({
          completed: intendedCompletedState,
          _csrf: token,
        }),
      })
        .then((res) => {
          if (res.ok) {
            // Update the checkbox state after a successful update
            checkbox.checked = intendedCompletedState;
          }
        })
        .catch((err) => console.error(err));
  
      // Prevent the default form submission behavior
      return false;
    }

    function deleteTodo(id) {
      console.log(id);
      fetch(`/todos/${id}`, {
        method: "delete",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({
          _csrf: token,
        }),
      })
        .then((res) => {
          if (res.ok) {
            window.location.reload();
          }
        })
        .catch((err) => console.error(err));
    }
    function validateForm() {
      const dueDateInput = document.querySelector('input[name="dueDate"]');
      if (dueDateInput.value.trim() === "") {
        alert("Due Date cannot be empty");
        return false;
      }
      return true;
    }

  </script>
</head>

<body>
  <div class="grid pt-28 grid-cols-6">
    <div class="col-start-3 col-span-2">
      <%- include("header.ejs") %> <br>
        <form action="/todos" method="post" onsubmit="return validateForm()">
          <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
          <div class="flex gap-2 mt-5">
            <div class="flex-auto">
              <input type="text" name="title" placeholder="Task Title"
                class="border border-gray-500 rounded-xl text-gray-900 w-full p-2 text-sm" required />
            </div>
            <div class="flex-auto">
              <input type="date" name="dueDate"
                class="border border-gray-500 rounded-xl text-gray-900 w-full p-2 text-sm leading-4" />
            </div>
            <div class="flex-none">
              <button type="submit" class="bg-green-700 text-white px-5 py-1.5 rounded-xl font-medium mr-2 mb-2">
                Add
              </button>
            </div>
          </div>
        </form> <br>
        <%- include('todos.ejs') %> <br>
          <%- include("footer.ejs") %>
    </div>
  </div>
</body>

</html>